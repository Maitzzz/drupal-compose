	<Location /php-5.3.28-fcgi>
		Order deny,allow
		Deny from all
		Allow from env=REDIRECT_STATUS
	</Location>

	Alias /php-5.4.31-fcgi /var/apache-2.2.22/php-5.4.31-fcgi
	FastCgiExternalServer /var/apache-2.2.22/php-5.4.31-fcgi -host 127.0.0.1:5431 -idle-timeout 300 -pass-header Authorization

	<Location /php-5.4.31-fcgi>
		Order deny,allow
		Deny from all
		Allow from env=REDIRECT_STATUS
	</Location>

	Alias /php-5.5.15-fcgi /var/apache-2.2.22/php-5.5.15-fcgi
	FastCgiExternalServer /var/apache-2.2.22/php-5.5.15-fcgi -host 127.0.0.1:5515 -idle-timeout 300 -pass-header Authorization

	<Location /php-5.5.15-fcgi>
		Order deny,allow
