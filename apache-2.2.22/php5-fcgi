<IfModule mod_fastcgi.c>
	AddHandler php5-fcgi .php

	Alias /php-5.2.17-fcgi /var/apache-2.2.22/php-5.2.17-fcgi
	FastCgiExternalServer /var/apache-2.2.22/php-5.2.17-fcgi -host 127.0.0.1:5217 -idle-timeout 300 -pass-header Authorization

	<Location /php-5.2.17-fcgi>
		Order deny,allow
		Deny from all
		Allow from env=REDIRECT_STATUS
	</Location>

	Alias /php-5.3.28-fcgi /var/apache-2.2.22/php-5.3.28-fcgi
