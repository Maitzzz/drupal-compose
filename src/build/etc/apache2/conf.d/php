<IfModule mod_fastcgi.c>
  AddHandler php .php

  Alias /php /var/www/php
  FastCgiExternalServer /var/www/php -host 127.0.0.1:9000 -idle-timeout 300 -pass-header Authorization

  <Location /php>
    Order deny,allow
    Deny from all
    Allow from env=REDIRECT_STATUS
  </Location>

  Action php /php
</IfModule>
